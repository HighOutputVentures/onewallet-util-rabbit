{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["es7", "es2016.array.include"],
    "allowSyntheticDefaultImports": true,
    "outDir": "./../build",
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
